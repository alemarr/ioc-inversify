{
  "compilerOptions": {
      "target": "es6",
      "lib": ["es6", "dom"],
      "types": ["reflect-metadata", "jest"],
      "module": "commonjs",
      "rootDir": "./src",
      "outDir": "./dist/",
      "strict": true,
      "removeComments": true,
      "strictPropertyInitialization": false,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "noEmit": true
  },
  "exclude": [ 
    "./node_modules",
    "./dist",
    "jest.config.js",
    "test"
  ],
  "include": [
    "./src"
  ]
}
